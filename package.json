{
  "name": "vite-electron-builder",
  "description": "Secure boilerplate for Electron app based on Vite",
  "private": true,
  "engines": {
    "npm": ">=8.1"
  },
  "main": "packages/main/dist/index.cjs",
  "scripts": {
    "dev": "node scripts/watch.js",
    "build": "npm run build:main && npm run build:preload && npm run build:renderer && npm run build:sharedProcess",
    "build:main": "cd ./packages/main && vite build",
    "build:preload": "cd ./packages/preload && vite build",
    "build:renderer": "cd ./packages/renderer && vite build",
    "build:sharedProcess": "cd ./packages/sharedProcess && vite build",
    "compile": "cross-env MODE=production npm run build && electron-builder build --config .electron-builder.config.js --dir --config.asar=false",
    "test": "npm run test:main && npm run test:preload && npm run test:renderer && npm run test:e2e",
    "test:e2e": "vitest run",
    "test:main": "vitest run -r packages/main --passWithNoTests",
    "test:preload": "vitest run -r packages/preload --passWithNoTests",
    "test:renderer": "vitest run -r packages/renderer --passWithNoTests",
    "lint": "eslint . --ext js,ts,vue",
    "lint:fix": "npx eslint .  --ext js,ts,vue --fix",
    "typecheck:main": "tsc --noEmit -p packages/main/tsconfig.json",
    "typecheck:preload": "tsc --noEmit -p packages/preload/tsconfig.json",
    "typecheck:renderer": "vue-tsc --noEmit -p packages/renderer/tsconfig.json",
    "typecheck:services": "vue-tsc --noEmit -p packages/services/tsconfig.json",
    "typecheck:base": "vue-tsc --noEmit -p packages/base/tsconfig.json",
    "typecheck": "npm run typecheck:main && npm run typecheck:preload && npm run typecheck:renderer && npm run typecheck:base && npm run typecheck:services",
    "postinstall": "cross-env ELECTRON_RUN_AS_NODE=1 npx --no-install electron ./scripts/update-electron-vendors.js "
  },
  "devDependencies": {
    "@types/graceful-fs": "^4.1.5",
    "@types/lodash": "^4.14.182",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "5.28.0",
    "@typescript-eslint/parser": "^5.29.0",
    "@vitejs/plugin-vue": "3.0.0-alpha.2",
    "@vitejs/plugin-vue2": "^1.1.2",
    "@vue/test-utils": "2.0.1",
    "builtin-modules": "^3.3.0",
    "cross-env": "7.0.3",
    "electron": "19.0.4",
    "electron-builder": "23.0.3",
    "electron-devtools-installer": "3.2.0",
    "eslint": "8.18.0",
    "eslint-plugin-vue": "9.1.1",
    "happy-dom": "5.3.1",
    "nano-staged": "0.8.0",
    "sass": "^1.53.0",
    "simple-git-hooks": "2.8.0",
    "typescript": "4.7.4",
    "unplugin-auto-expose": "0.0.1",
    "vite": "3.0.0-alpha.13",
    "vite-plugin-commonjs-externals": "^0.1.1",
    "vite-plugin-svg-icons": "^2.0.1",
    "vitest": "0.15.1",
    "vue-eslint-parser": "^9.0.3",
    "vue-tsc": "0.38.1"
  },
  "dependencies": {
    "@wangeditor/editor": "^5.1.5",
    "@wangeditor/editor-for-vue": "^1.0.2",
    "@wangeditor/plugin-upload-attachment": "^1.0.0",
    "dayjs": "^1.11.3",
    "electron-updater": "5.0.1",
    "element-ui": "^2.15.9",
    "graceful-fs": "^4.2.10",
    "lodash": "^4.17.21",
    "spdlog": "^0.13.6",
    "vue": "2.7.0"
  }
}
