{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "sourceMap": false,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "jsx": "preserve",
    "types": ["vite-plugin-svg-icons/client"],
    "lib": ["ESNext", "dom", "dom.iterable"]
  },

  "include": [
    "src/**/*.vue",
    "src/**/*.ts",
    "src/**/*.tsx",
    "types/**/*.d.ts",
    "../../types/**/*.d.ts"
  ]
}
